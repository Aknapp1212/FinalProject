<p id="notice"><%= notice %></p>

<h1>Listing Outlines</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @outlines.each do |outline| %>
      <tr>
        <td><%= outline.name %></td>
        <td><%= outline.description %></td>
        <td><%= outline.price %></td>
        <td><%= link_to 'Show', outline, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_outline_path(outline), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', outline, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Outline', new_outline_path, class: "btn btn-link" %>
