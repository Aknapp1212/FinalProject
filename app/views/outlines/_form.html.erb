<%= form_for @outline, html: { multipart: true } do |f| %>
  <% if @outline.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@outline.errors.count, "error") %> prohibited this outline from being saved:</h2>

      <ul>
      <% @outline.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :price %><br>
    <%= f.select :price, [['$10.00',10.00], ['$15.00', 15.00], ['$20.00', 20.00]], class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>

  <div class="form-group">
    <%= f.label :lecture_id %><br />
    <%= f.select :lecture_id, [options_for_select(Lecture.get_lectures)] %>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
